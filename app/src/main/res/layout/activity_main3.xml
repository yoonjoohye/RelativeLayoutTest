<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<Button
    android:id="@+id/btn_base1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Base1"
    />
    <Button
        android:id="@+id/btn_base2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Base2"
        />
    <Button
        android:id="@+id/btn_base3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/btn_base1"
        android:layout_above="@id/btn_base2"
        android:text="Base3"
        />
    <Button
        android:id="@+id/btn_base4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_base1"
        android:text="Base3"
        />
</RelativeLayout>
